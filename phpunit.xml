<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         backupGlobals="false"
         backupStaticProperties="false"
         bootstrap="bootstrap/autoload.php"
         cacheDirectory=".phpunit.cache"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
>
  <testsuites>
    <testsuite name="Unit">
      <directory suffix="Test.php">./tests/Unit</directory>
    </testsuite>
    <testsuite name="Feature">
      <directory suffix="Test.php">./tests/Feature</directory>
    </testsuite>
    <testsuite name="API">
      <file>./tests/Feature/ApiRateLimitTest.php</file>
      <directory suffix="Test.php">./tests/Feature/Accessories/Api</directory>
      <directory suffix="Test.php">./tests/Feature/AssetModels/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Assets/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Categories/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Checkins/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Checkouts/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Companies/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Components/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Consumables/Api</directory>
      <directory suffix="Test.php">./tests/Feature/CustomFields/Api</directory>
      <directory suffix="Test.php">./tests/Feature/CustomFieldsets/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Departments/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Depreciations/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Groups/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Importing/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Licenses/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Locations/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Maintenances/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Manufacturers/Api</directory>
      <directory suffix="Test.php">./tests/Feature/PredefinedKits/Api</directory>
      <directory suffix="Test.php">./tests/Feature/StatusLabels/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Suppliers/Api</directory>
      <directory suffix="Test.php">./tests/Feature/Users/Api</directory>
    </testsuite>
  </testsuites>
  <php>
    <env name="APP_ENV" value="testing"/>
    <env name="BCRYPT_ROUNDS" value="4"/>
    <env name="CACHE_DRIVER" value="array"/>
    <env name="MAIL_FROM_ADDR" value="app@example.com"/>
    <env name="MAIL_MAILER" value="array"/>
    <env name="QUEUE_DRIVER" value="sync"/>
    <env name="DB_CONNECTION" value="sqlite"/>
    <env name="DB_DATABASE" value="/var/www/html/database/database.sqlite"/>
    <env name="SESSION_DRIVER" value="array"/>
    <ini name="display_errors" value="true"/>
  </php>
  <source>
    <include>
      <directory suffix=".php">app/</directory>
    </include>
  </source>
</phpunit>
